<h1>Edit Article</h1>

<form action="/admin/article/edit/{{article.id}}" method="POST">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="{{article.name}}" required>
  </div>

  <div>
    <label for="slug">Slug:</label>
    <input type="text" id="slug" name="slug" value="{{article.slug}}" required>
  </div>

  <div>
    <label for="image">Image:</label>
    <input type="text" id="image" name="image" value="{{article.image}}" required>
  </div>

  <div>
    <label for="body">Body:</label>
    <textarea id="body" name="body" required>{{article.body}}</textarea>
  </div>

  <div>
    <label for="author_id">Author ID:</label>
    <input type="number" id="author_id" name="author_id" value="{{article.author_id}}" required>
  </div>

  <button type="submit">Update Article</button>
</form>

<a href="/admin">Back to Articles</a>
