<!DOCTYPE html>
<html>
<head>
    <title>Edit Article</title>
</head>
<body>
    <h1>Edit Article</h1>
    <form action="/admin/article/edit/{{article.id}}" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{article.name}}" required>
        <br>
        <label for="content">Content:</label>
        <textarea id="content" name="content" required>{{article.body}}</textarea>
        <br>
        <label for="authorId">Author:</label>
        <select id="authorId" name="authorId">
            {{#each authors}}
                <option value="{{this.id}}" {{#if (eq this.id ../article.authorId)}}selected{{/if}}>
                    {{this.name}}
                </option>
            {{/each}}
        </select>
        <br>
        <button type="submit">Update Article</button>
    </form>
    <form action="/admin/article/delete/{{article.id}}" method="POST">
        <button type="submit" style="color: red;">Delete Article</button>
    </form>
</body>
</html>